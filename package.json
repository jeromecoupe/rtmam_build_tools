{
  "name": "rtmam_build_tools",
  "version": "1.0.0",
  "description": "Let's play with tooling",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf \"./dist\"",
    "server": "browser-sync start --no-open --server \"./\" --files \"dist/css/**/*\" \"dist/js/**/*\" \"./**/*.html\"",
    "styles:dev": "sass \"./src/scss/main.scss\" \"./dist/css/main.css\" --embed-source-map --source-map-urls=\"absolute\"",
    "styles:prod": "sass \"./src/scss/main.scss\" \"./dist/css/main.css\" --no-source-map --style=compressed",
    "watch:styles": "onchange \"./src/scss/**/*\" -- npm run styles:dev",
    "build": "npm-run-all clean -p styles:prod",
    "dev": "npm-run-all --parallel server watch:*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5"
  }
}
