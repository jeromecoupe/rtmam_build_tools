permalink: /index.html
---

{% extends "layouts/base.njk" %}

{% from "macros/blogpostCard.njk" import blogpostCard %}

{% set currentSection = "home" %}

{% block content %}

  <h1>Build tools are awesome</h1>
  {% for item in collections.blogposts  %}
    {% if loop.first %}<ul>{% endif %}
      <li>
        
        {{ blogpostCard({
          title: item.data.title,
          date: item.page.date,
          summary: item.data.summary,
          image: item.data.blogImage,
          alt: item.data.blogImageAlt,
          url: item.page.url
        }) }}

      </li>
    {% if loop.last %}</ul>{% endif %}
  {% endfor %}

  <h2>Ships, not chips</h2>
  {% for item in starships %}
    {% if loop.first %}<ul>{% endif %}
        <li>
          {% set url = "/ships/" ~ item.name|slugify %}
          <a href="{{ url }}">{{ item.name }}</a> - {{ item.class }}
        </li>
    {% if loop.last %}</ul>{% endif %}
  {% endfor %}

{% endblock %}
 